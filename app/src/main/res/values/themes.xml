<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GeoTeachApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Text color -->
        <item name="android:textColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <!--  Background  -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/gray69</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>

    </style>

    <style name="Theme.GeoTeachApplication" parent="Base.Theme.GeoTeachApplication" />
    <style name="Base.Theme.Yellow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_chudao</item>
    </style>
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeStyle2</item>
    </style>
    <style name="FabShapeStyle2" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">20%</item>

    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">#4D000000</item>

        <item name="colorControlActivated">#FFCA00</item>
    </style>

</resources>